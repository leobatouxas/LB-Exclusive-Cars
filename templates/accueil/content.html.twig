<section class="bg-white mt-20">
	<h1 class="text-dark-800 text-center text-2xl">{{ title_label|default('Voitures') }}</h1>
	<div class="container mx-auto flex items-center flex-wrap pt-2 pb-12">
		{% for vehicule in vehicules %}
		{# {% for photo in vehicule.photos %}
		{{ dump(photo[0])}}
		{% endfor %} #}
			<div class="w-full lg:w-1/3 xl:w-1/4 p-6 flex flex-col justify-center">
				<div class="flex justify-center">
					<a href="{{ path('vehicule_show', {'id': vehicule.id}) }}">
							{% for photo in vehicule.photos %}
								{% if loop.index == 1 %}
									<img class="hover:grow hover:shadow-lg" src="{{ vich_uploader_asset(photo, 'imageFile') | imagine_filter('miniature') }}" style="width:350px;height:250px;object-fit: cover;">
								{% endif %}
							{% else %}
								<img class="hover:grow hover:shadow-lg" src="https://via.placeholder.com/350x250" style="width:350px;height:250px;object-fit: cover;">
							{% endfor %}
						<div class="pt-3">
							<div>
								<p class="text-xl">{{vehicule.nom|u.truncate(20, '..', false)}}</p>
							</div>
							
                            <div class="flex flex-row mt-1.5">
                                <div class="mr-2"><p>{{ vehicule.kilometrage }} km</p></div>
                                <div class="mx-1"><p>{{ vehicule.modele.marque.nom }}</p></div>
                                <div class="mx-1"><p>{{ vehicule.modele.nom }}</p></div>
                            </div>
                            <div class="flex justify-between">
                                <div class="flex flex-row items-center">
                                    <div style="padding-top: 0.1em; padding-bottom: 0.1rem" class="text-xs px-3 mx-px bg-gray-200 text-gray-800 rounded-full">{{ vehicule.carburant.nom }}</div>
                                    <div style="padding-top: 0.1em; padding-bottom: 0.1rem" class="text-xs px-3 mx-px bg-gray-200 text-gray-800 rounded-full">{{ vehicule.boiteVitesse.nom }}</div>
                                </div>
